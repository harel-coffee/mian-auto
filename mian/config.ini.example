[mail]
MAIL_SERVER = 192.168.1.10
MAIL_PORT = 25
MAIL_USE_TLS = False
MAIL_USERNAME =
MAIL_PASSWORD =

[ldap]
# Use LDAP?
LDAP_ACTIVE = True

# See https://flask-ldap3-login.readthedocs.io/en/latest/configuration.html
# Example below works for Acive Directory
LDAP_HOST = 192.168.1.12
LDAP_BASE_DN = dc=example,dc=com
LDAP_USER_DN = ou=People
LDAP_SEARCH_FOR_GROUPS = False
LDAP_USER_RDN_ATTR = cn
LDAP_USER_LOGIN_ATTR = sAMAccountName
LDAP_BIND_USER_DN = bind-user@example.com
LDAP_BIND_USER_PASSWORD = MyPassword
LDAP_USER_SEARCH_SCOPE = SUBTREE

# Values below are default values
LDAP_PORT = 389
LDAP_USE_SSL = False
LDAP_ADD_SERVER = True
LDAP_READONLY = True
LDAP_CHECK_NAMES = True
LDAP_BIND_DIRECT_CREDENTIALS = False
LDAP_BIND_DIRECT_PREFIX =
LDAP_BIND_DIRECT_SUFFIX =
LDAP_ALWAYS_SEARCH_BIND = False
LDAP_FAIL_AUTH_ON_MULTIPLE_FOUND = False
LDAP_GROUP_DN =
LDAP_USER_OBJECT_FILTER = (objectclass=person)
LDAP_GET_USER_ATTRIBUTES =
LDAP_GROUP_SEARCH_SCOPE = LEVEL
LDAP_GROUP_OBJECT_FILTER = (objectclass=group)
LDAP_GROUP_MEMBERS_ATTR = uniqueMember
LDAP_GET_GROUP_ATTRIBUTES =
